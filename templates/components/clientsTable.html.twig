{% block table %}
<table class="table table-sm table-secondary table-striped table-hover" id="table">
    <tr>
        <th scope="col"><input type="checkbox" id="check-all" /></th>
        <th scope="col">id</th>
        <th scope="col">ФИО</th>
        <th scope="col">Паспорт</th>
        <th scope="col">Телефон</th>
        <th scope="col">Доп.телефон</th>
        <th scope="col">Прописка</th>
        <th scope="col">
            <div class="archived-check">
                <input class="form-check-input" type="checkbox" value="{{ archived }}" id="archived-clients"
                    {% if archived %}
                        {{ ' checked' }}
                    {% endif %}
                >
                <label class="form-check-label" for="flexCheckDefault">
                    В архиве
                </label>
            </div>
        </th>
    </tr>
    {% for client in clients %}
    <tr>
        <td><input name="select" type="checkbox" value="{{ client.id }}" /></td>
        <td>{{ client.id }}</td>
        <td>{{ client.name }}</td>
        <td>{{ client.passport }}</td>
        <td>{% if client.main_phone|length < 1 %}{{ '---' }}{% else %}{{ client.main_phone }}{% endif %}</td>
        <td>{% if client.second_phone|length < 1 %}{{ '---' }}{% else %}{{ client.second_phone }}{% endif %}</td>
        <td>{% if client.address|length < 1 %}{{ '---' }}{% else %}{{ client.address }}{% endif %}</td>
        <td>
            <a class="btn btn-success" href="/clients/edit/{{ client.id }}">Исправить</a>
        </td>
    </tr>
    {% endfor %}
</table>

<script src="/assets/scripts/clients/archivedClients.js" type="text/javascript"></script>
{% endblock %}