{% extends "base.html.twig" %}
{% block content %}
	<div class="container-xs container-sm container-md container-xl">

		<div class="row w-100 mt-2 mb-2">
			<div class="col-xs-12 col-sm-12 col-md-12 col-xl-12 text-center">
				<p class="h1" id="main-page-h1">{{ header }}</p>
			</div>
		</div>

		<div class="row w-100">
			<div class="col-md-1 col-xl-3"></div>
			<div class="col-xs-12 col-sm-12 col-md-10 col-xl-6">
				<div class="row w-100 mb-2">
					<div class="input-group">
						<span class="input-group-text w-25">
							Название
							<span class="text-danger">*</span>
						</span>
						<input required type="text" class="form-control" name="text" id="name" placeholder="Введите название гостиницы" value="{{ hotel.name }}"/>
					</div>
				</div>

				<div class="row w-100 mb-2">
					<div class="input-group">
						<span class="input-group-text w-25">Курорт
							<span class="text-danger">*</span>
						</span>
						<select required name="country" id="resort-id" name="select" class="btn btn-success dropdown-toggle w-75">
							{% for resort in resorts %}
								<option value="{{ resort.id }}" {%if resrt.id == hotel.resort_id %} {{ 'selected="selected"' }} {% endif %}>{{ resort.name }}</option>
							{% endfor %}
						</select>
					</div>
				</div>

				<div class="row w-100 mb-2">
					<div class="input-group">
						<span class="input-group-text w-25">Адрес</span>
						<input type="text" class="form-control" name="text" id="address" placeholder="Введите адрес гостиницы" value="{{ hotel.address}}"/>
					</div>
				</div>

				<div class="row w-100 mb-2">
					<div class="input-group">
						<span class="input-group-text w-25">Номера
							<span class="text-danger">*</span>
						</span>
						<input required type="number" class="form-control" value="{{ hotel.rooms }}" name="text" id="rooms" placeholder="Введите количество номеров"/>
					</div>
				</div>

				<div class="row w-100 mb-2">
					<div class="input-group">
						<span class="input-group-text w-25">Территория</span>
						<input type="text" class="form-control" id="area" name="text" value="{{ hotel.area }}" placeholder="Опишите местность гостиницы"/>
					</div>
				</div>

				<div class="row w-100 mb-2">
					<div class="input-group">
						<span class="input-group-text w-25">Корпус</span>
						<textarea id="housing" class="form-control" rows="1" placeholder="Опишите корпус отеля">{{ hotel.housing }}</textarea>
					</div>
				</div>

				<div class="row w-100 mb-2">
					<div class="input-group">
						<span class="input-group-text w-25">Пляж</span>
						<input type="text" class="form-control" id="beach" name="text" value="{{ hotel.beach }}" placeholder="Опишите пляж гостиницы"/>
					</div>
				</div>

				<div class="row w-100 mb-2">
					<div class="input-group">
						<span class="input-group-text w-25">Заезды</span>
						<input type="number" name="text" class="form-control" id="number" value="{{ hotel.checkins }}" placeholder="Количество заездов"/>
					</div>
				</div>

				<div class="row w-100 mb-2">
					<div class="input-group">
						<span class="input-group-text w-25">Вода</span>
						<input type="text" class="form-control" id="water" name="text" value="{{ hotel.water }}" placeholder="Опишите воду в гостинице"/>
					</div>
				</div>

				<div class="row w-100 mb-2">
					<div class="input-group">
						<span class="input-group-text w-25">Питание</span>
						<input type="text" class="form-control" id="food" name="text" value="{{ hotel.food }}" placeholder="Опишите питание"/>
					</div>
				</div>

				<div class="row w-100 mb-2">
					<div class="input-group">
						<span class="input-group-text w-25">Особенности</span>
						<input type="text" name="text" class="form-control" id="features" value="{{ hotel.features }}" placeholder="Опишите особенности гостиницы"/>
					</div>
				</div>

				<div class="row w-100 mb-2">
					<div class="input-group">
						<span class="input-group-text w-25">Описание</span>
						<input type="text" class="form-control" id="description" name="text" value="{{ hotel.description }}" placeholder="Добавьте описание"/>
					</div>
				</div>

				<div class="row w-100 mb-2">
					<div class="input-group">
						<span class="input-group-text w-25">Статус
							<span class="text-danger">*</span>
						</span>
						<select name="is-active" id="is-active" name="select" class="btn btn-success dropdown-toggle w-75">
							{% for i in 0..1 %}
								<option value="{{ i }}" {% if hotel.is_active == i %} {{ 'selected="selected"' }} {% endif %}>
									{% if i == 0 %}
										{{ 'Не доступна' }}
									{% endif %}
									{% if i == 1 %}
										{{ 'Доступна' }}
									{% endif %}
								</option>
							{% endfor %}
						</select>
					</div>
				</div>

				<div class="row w-100 mb-2">
					<div class="input-group w-100 mb-2">
						<button type="button" class="btn btn-success w-100" id="save-btn" disabled>
							Сохранить
						</button>
					</div>
				</div>

				<div class="row w-100 mb-150">
					<p class="text-center text-danger" id="error-field"></p>
					<p hidden id="id">{{ hotel.id }}</p>
				</div>
			</div>

			<script type="text/javascript" src="/assets/scripts/hotels/update.js"></script>
			<script type="text/javascript" src="/assets/scripts/hotels/formFilled.js"></script>
		</div>
	{% endblock %}
