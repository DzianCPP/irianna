{% extends "base.html.twig" %}

{% block content %}

<div class="row w-100 mt-5 mb-5">
	<div class="col-xs-12 col-sm-12 col-md-12 col-xl-12 text-center">
		<h1 class="h1 m-1" id="main-page-h1">{{ message }}</h1>
	</div>
</div>


<div class="container container-sm container-md container-xl my-5">

    <div class="row mb-2">
        <div class="col-md-1 col-xl-3"></div>
        <div class="col-xs-12 col-sm-12 col-md-10 col-xl-6 text-center">
            <div class="input-group">
                <input class="form-control" type="file" id="stamp-file">
            </div>
        </div>
    </div>

    <div class="row mb-2">
        <div class="col-md-1 col-xl-3"></div>
        <div class="col-xs-12 col-sm-12 col-md-10 col-xl-6 text-center">
            <div class="input-group">
                <span class="input-group-text w-25">Менеджер</span>
                <select name="is-active" id="manager" class="btn btn-success dropdown-toggle w-75">
                    {% for m in managers %}
                    <option value="{{ m.id }}">{{ m.name }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>
    </div>

    <div class="row mb-2">
        <div class="col-md-1 col-xl-3"></div>
        <div class="col-xs-12 col-sm-12 col-md-10 col-xl-6 text-center">
            <div class="input-group w-100 mb-2">
                <button type="button" class="btn btn-success w-100" id="save-btn" disabled>Сохранить</button>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-1 col-xl-3"></div>
        <div class="col-xs-12 col-sm-12 col-md-10 col-xl-6 text-center">
            <p id="error-field"></p>
        </div>
    </div>
</div>

<script type="text/javascript" src="/assets/scripts/stamps/validate.js"></script>
<script type="text/javascript" src="/assets/scripts/stamps/create.js"></script>
{% endblock %}