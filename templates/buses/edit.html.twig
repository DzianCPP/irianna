{% extends "base.html.twig" %}
{% block content %}
<div class="row w-100 mt-2 mb-2">
	<div class="col-xs-12 col-sm-12 col-md-12 col-xl-12 text-center">
		<h1 class="h1 m-1" id="main-page-h1">{{ header }}</h1>
	</div>
</div>

<div class="container container-sm container-md container-xl mt-1 mb-5">
	<div class="container-fluid">
		<div class="row w-100">
			<div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-4"></div>
			<div class="col-xs-12 col-sm-12 col-md-12 col-xl-4">
				<div class="row w-100 mb-2">
					<div class="input-group">
						<span class="input-group-text w-25">Название</span>
						<input type="text" value="{{ bus.name }}" class="form-control" name="text" id="name"
							placeholder="Введите название автобуса" />
					</div>
				</div>

				<div class="row w-100 mb-2">
					<div class="input-group">
						<span class="input-group-text w-25">Маршрут</span>
						<input type="text" value="{{ bus.route }}" class="form-control" name="text" id="route"
							placeholder="Введите маршрут автобуса" />
					</div>
				</div>

				<div class="row w-100 mb-2">
					<div class="input-group">
						<span class="input-group-text w-25">Места</span>
						<input type="text" value="{{ bus.places }}" class="form-control" name="text" id="places"
							placeholder="Введите количетсво мест" />
					</div>
				</div>

				<div class="row w-100 mb-2">
					<div class="input-group">
						<div class="input-group w-100">
							<span class="input-group-text w-25">Из Минска</span>
							<textarea placeholder="Из Минска" class="form-control w-50" name="from-minsk"
								aria-label="With textarea"
								id="from-minsk">{% for date in bus.departure_from_minsk %}{{ date }}{{ '\n' }}{% endfor %}</textarea>
							<input type="date" class="btn btn-sm border-0 w-25" name="date" id="calendar-from-minsk">
						</div>
						<div class="input-group w-100">
							<span class="input-group-text w-25">В Минск</span>
							<textarea placeholder="В Минск" class="form-control w-50" name="to-minsk"
								aria-label="With textarea"
								id="to-minsk">{% for date in bus.arrival_to_minsk %}{{ date }}{{ '\n' }}{% endfor %}</textarea>
							<input type="date" class="btn btn-sm border-0 w-25" name="date" id="calendar-to-minsk">
						</div>
					</div>
				</div>

				<div class="row w-100 mb-2">
					<div class="input-group w-100 mb-2">
						<button type="button" class="btn btn-success w-100" id="save-btn" disabled>
							Сохранить
						</button>
					</div>
				</div>

				<div class="row w-100 mb-2">
					<p id="error-field"></p>
					<p hidden id="bus-id">{{ bus.id }}</p>
				</div>

			</div>
		</div>
	</div>


	<script type="text/javascript" src="/assets/scripts/buses/update.js"></script>
	<script type="text/javascript" src="/assets/scripts/buses/formFilled.js"></script>
	<script type="text/javascript" src="/assets/scripts/buses/addDates.js"></script>
</div>
{% endblock %}