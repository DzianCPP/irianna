{% extends "base.html.twig" %}

{% block content %}

<div class="row w-100 mt-5 mb-5">
    <div class="col-xs-12 col-sm-12 col-md-12 col-xl-12 text-center">
        <h1 class="h1 m-1" id="main-page-h1">{{ message }}</h1>
    </div>
</div>


<div class="container container-sm container-md container-xl my-5">


    <form class="form">
        <div class="row w-auto mt-2">
            <div class="col-xs-1 col-sm-2 col-md-3 col-xl-4"></div>
            <div class="col-xs-10 col-sm-8 col-md-6 col-xl-4">
                <div class="input-group">
                    <label class="input-group-text w-25" for="name">Название</label>
                    <input type="text" class="form-control w-75" name="new-name" id="name"
                        placeholder="Введите новый логин" value="{{ country.name
                        }}">
                </div>
            </div>
            <div class="col-xs-1 col-sm-2 col-md-3 col-xl-4"></div>
        </div>

        <div class="row w-auto mt-2">
            <div class="col-xs-1 col-sm-2 col-md-3 col-xl-4"></div>
            <div class="col-xs-10 col-sm-8 col-md-6 col-xl-4">
                <div class="input-group">
                    <label class="input-group-text w-25" for="super-admin">Статус</label>
                    <select name="is-active" id="is-active" class="btn
                        btn-success dropdown-toggle w-75">
                        <option value="0" {% if country.is_active==0 %} {{ 'selected="selected"' }} {% endif %}>
                            Не доступна
                        </option>
                        <option value="1" {% if country.is_active==1 %} {{ 'selected="selected"' }} {% endif %}>
                            Доступна
                        </option>
                    </select>
                </div>
            </div>
            <div class="col-xs-1 col-sm-2 col-md-3 col-xl-4"></div>
        </div>

        <div class="row w-auto mt-2">
            <div class="col-xs-1 col-sm-2 col-md-3 col-xl-4"></div>
            <div class="col-xs-10 col-sm-8 col-md-6 col-xl-4">
                <button type="button" class="btn btn-success w-100" id="save-btn" value="submit" disabled>
                    Сохранить
                </button>
            </div>
            <div class="col-xs-1 col-sm-2 col-md-3 col-xl-4"></div>
        </div>

        <div>
            <input type="hidden" value="{{ country.id }}" name="id" id="id">
        </div>

        <div class="row w-100">
            <div class="col-xs-1 col-sm-2 col-md-3 col-xl-4"></div>
            <div class="col-xs-10 col-sm-8 col-md-6 col-xl-4">
                <div class="alert mt-1" id="error-field-div">
                    <p id="error-field"></p>
                </div>
            </div>
            <div class="col-xs-1 col-sm-2 col-md-3 col-xl-4"></div>
        </div>
    </form>

    <script type="text/javascript" src="/assets/scripts/countries/formFilled.js"></script>
    <script type="text/javascript" src="/assets/scripts/countries/edit.js"></script>
</div>
{% endblock %}