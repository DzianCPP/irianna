{% extends "base.html.twig" %}
{% block content %}
<div class="row w-100 mt-2 mb-2">
    <div class="col-xs-12 col-sm-12 col-md-12 col-xl-12 text-center">
        <h1 class="h1 m-1" id="main-page-h1">{{ header }}</h1>
    </div>
</div>

<div class="container container-sm container-md container-xl mt-1 mb-5">	{% if managers|length > 0 %}
	<div class="row w-auto">
		<div class="col-md-2 col-xl-3"></div>
		<div class="col-xs-12 col-sm-12 col-md-8 col-xl-6 text-center">
			<div class="table-responsive w-100">
				{% use 'components/managersTable.html.twig' %}
				{% block table %}
				{{ parent() }}
				{% endblock %}
			</div>
		</div>
	</div>

	<div class="row w-100">
		<div class="col-xs-0 col-sm-0 col-md-1 col-xl-3"></div>
		<div class="col-xs-12 col-sm-12 col-md-10 col-xl-6">
			<div>
				<a class="btn btn-outline-success w-100 mb-1" id="delete-all">
					Удалить выбранные
				</a>
			</div>
		</div>
		<div class="col-xs-0 col-sm-0 col-md-1 col-xl-3"></div>
	</div>

	{% else %}
	<div class="row w-100">
		<div class="col-xs-0 col-sm-0 col-md-1 col-xl-3"></div>
		<div class="col-xs-12 col-sm-12 col-md-10 col-xl-6">
			<div>
				<h1 class="h1 w-100 m-1 text-dark">{{ "Не удалось найти менеджеров" }}</h1>
			</div>
		</div>
		<div class="col-xs-0 col-sm-0 col-md-1 col-xl-3"></div>
	</div>
	{% endif %}
	{% if pages > 1 %}
	{% use 'components/pagination.html.twig' %}
	{% block pagination %} {{ parent() }} {% endblock %}
	{% endif %}

	<div class="row w-100">
		<div class="col-xs-0 col-sm-0 col-md-1 col-xl-3"></div>
		<div class="col-xs-12 col-sm-12 col-md-10 col-xl-6">
			<div>
				<a class="btn btn-outline-success w-100 mb-1" id="add-country" href="/managers/new">
					Добавить менеджера
				</a>
			</div>
		</div>
		<div class="col-xs-0 col-sm-0 col-md-1 col-xl-3"></div>
	</div>

	<div class="row w-100">
		<div class="col-xs-0 col-sm-0 col-md-1 col-xl-3"></div>
		<div class="col-xs-12 col-sm-12 col-md-10 col-xl-6">
			<div>
				<a class="btn btn-success w-100 mb-1" id="main-page" href="/admin">
					Главная страница
				</a>
			</div>
		</div>
		<div class="col-xs-0 col-sm-0 col-md-1 col-xl-3"></div>
	</div>
</div>
<script type="text/javascript" src="/assets/scripts/selectAll.js"></script>
<script type="text/javascript" src="/assets/scripts/managers/delete.js"></script>

{% endblock %}