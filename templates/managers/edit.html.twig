{% extends "base.html.twig" %}

{% block content %}
<div class="row w-100 mt-2 mb-2">
	<div class="col-xs-12 col-sm-12 col-md-12 col-xl-12 text-center">
		<h1 class="h1 m-1" id="main-page-h1">{{ header }}</h1>
	</div>
</div>

<div class="container container-sm container-md container-xl mt-1 mb-5">

	<div class="row w-100 mb-2">
		<div class="col-md-2 col-xl-3"></div>
		<div class="col-xs-12 col-sm-12 col-md-8 col-xl-6">
			<div class="input-group">
				<span class="input-group-text w-25">ФИО</span>
				<input type="text" class="form-control" id="name" placeholder="Введите ФИО" value="{{ manager.name }}">
			</div>
		</div>
	</div>

	<div class="row w-100 mb-2">
		<div class="col-md-2 col-xl-3"></div>
		<div class="col-xs-12 col-sm-12 col-md-8 col-xl-6">
			<div class="input-group w-100 mb-2">
				<button type="button" class="btn btn-success w-100" id="save-btn" disabled>Сохранить</button>
			</div>
		</div>
	</div>

	<div class="row w-100">
		<div class="col-md-2 col-xl-3"></div>
		<div class="col-xs-12 col-sm-12 col-md-8 col-xl-6">
			<p id="error-field"></p>
			<p hidden id="id">{{ manager.id }}</p>
		</div>
	</div>

	<script type="text/javascript" src="/assets/scripts/managers/update.js"></script>
	<script type="text/javascript" src="/assets/scripts/managers/formFilled.js"></script>
</div>
{% endblock %}