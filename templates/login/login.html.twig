{% extends "base.html.twig" %}

{% block content %}
    <div class="container-xs container-sm container-md container-xl">
        
        <div class="row w-100 mt-5 mb-5">
            <div class="col-xs-1 col-sm-2 col-md-3 col-xl-4"></div>
            <div class="col-xs-10 col-sm-8 col-md-6 col-xl-4">
                <h1 class="h1 m-1" id="main-page-h1">{{ message }}</h1>
            </div>
            <div class="col-xs-1 col-sm-2 col-md-3 col-xl-4"></div>
        </div>

        <div class="row w-100 mb-2">
            <div class="col-xs-1 col-sm-2 col-md-3 col-xl-4"></div>
            <div class="col-xs-10 col-sm-8 col-md-6 col-xl-4">
                <div class="input-group">
                    <span class="input-group-text w-25">Логин</span>
                    <input type="text" class="form-control w-75" id="login">
                </div>
            </div>
            <div class="col-xs-10 col-sm-8 col-md-6 col-xl-4"></div>
        </div>

        <div class="row w-100 mb-2">
            <div class="col-xs-1 col-sm-2 col-md-3 col-xl-4"></div>
            <div class="col-xs-10 col-sm-8 col-md-6 col-xl-4">
                <div class="input-group">
                    <span class="input-group-text w-25">Пароль</span>
                    <input type="password" class="form-control" id="password">
                </div>
            </div>
            <div class="col-xs-10 col-sm-8 col-md-6 col-xl-4"></div>
        </div>

        <div class="row w-100 mb-2">
            <div class="col-xs-1 col-sm-2 col-md-3 col-xl-4"></div>
            <div class="col-xs-10 col-sm-8 col-md-6 col-xl-4">
                <div class="input-group w-100 mb-2">
                    <button type="button" class="btn btn-success w-100" id="login-btn" disabled>Войти</button>
                </div>
            </div>
            <div class="col-xs-10 col-sm-8 col-md-6 col-xl-4"></div>
        </div>

        <div class="row w-100 mb-2">
            <div class="col-xs-1 col-sm-2 col-md-3 col-xl-4"></div>
            <div class="col-xs-10 col-sm-8 col-md-6 col-xl-4">
                <div class="input-group w-100 mb-2">
                    <a type="button" class="btn btn-secondary w-100" id="register-btn" href="/register">Регистрация нового менеджера</a>
                </div>
            </div>
            <div class="col-xs-10 col-sm-8 col-md-6 col-xl-4"></div>
        </div>

    <script type="text/javascript" src="/assets/scripts/login/login.js"></script>
    <script type="text/javascript" src="/assets/scripts/login/formFilled.js"></script>
    </div>
{% endblock %}