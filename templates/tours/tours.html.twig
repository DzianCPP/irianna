{% extends "base.html.twig" %}
{% block content %}

<div class="row w-100 mt-2 mb-2">
	<div class="col-xs-12 col-sm-12 col-md-12 col-xl-12 text-center">
		<h1 class="h1 m-1" id="main-page-h1">{{ header }}</h1>
		<p class="h5 m-auto text-center mb-3">{{ hotel.name }}</p>

	</div>
</div>

<div class="container container-sm container-md container-xl mt-1 mb-5">

	{% if tours|length > 0 %}
	<div class="row w-100">
		<div class="col-xs-12 col-sm-12 col-md-12 col-xl-12 mx-auto">
			<div class="table-responsive">
				{% use 'components/toursTable.html.twig' %}
				{% block table %}
				{{ parent() }}
				{% endblock %}
			</div>
		</div>
	</div>

	<div class="row w-100">
		<div class="col-xs-0 col-sm-0 col-md-1 col-xl-3"></div>
		<div class="col-xs-12 col-sm-12 col-md-10 col-xl-6">
			<div>
				<a class="btn btn-outline-success w-100 mb-1" id="delete-btn">
					Удалить выбранные
				</a>
			</div>
		</div>
		<div class="col-xs-0 col-sm-0 col-md-1 col-xl-3"></div>
	</div>

	{% else %}
	<div class="row w-100">
		<div class="col-xs-0 col-sm-0 col-md-1 col-xl-3"></div>
		<div class="col-xs-12 col-sm-12 col-md-10 col-xl-6">
			<div>
				<h1 class="h1 w-100 m-1 text-dark">{{ "Не удалось найти туры" }}</h1>
			</div>
		</div>
		<div class="col-xs-0 col-sm-0 col-md-1 col-xl-3"></div>
	</div>
	{% endif %}

	{% if pages > 1 %}
	{% use 'components/pagination.html.twig' %}
	{% block pagination %} {{ parent() }} {% endblock %}
	{% endif %}


	<div class="row w-100">
		<div class="col-xs-0 col-sm-0 col-md-1 col-xl-3"></div>
		<div class="col-xs-12 col-sm-12 col-md-10 col-xl-6">
			<div>
				<a class="btn btn-outline-success w-100 mb-1" id="add-country" href="/tours/new">
					Добавить тур
				</a>
			</div>
		</div>
		<div class="col-xs-0 col-sm-0 col-md-1 col-xl-3"></div>
	</div>

	<div class="row w-100">
		<div class="col-xs-0 col-sm-0 col-md-1 col-xl-3"></div>
		<div class="col-xs-12 col-sm-12 col-md-10 col-xl-6">
			<div>
				<a class="btn btn-success w-100 mb-1" id="main-page" href="/admin">
					Главная страница
				</a>
			</div>
		</div>
		<div class="col-xs-0 col-sm-0 col-md-1 col-xl-3"></div>
	</div>
</div>
</div>

<script type="text/javascript" src="/assets/scripts/selectAll.js"></script>
<script type="text/javascript" src="/assets/scripts/tours/delete.js"></script>
<script type="text/javascript" src="/assets/scripts/tours/search.js"></script>

{% endblock %}