{% extends "base.html.twig" %}

{% block content %}
	<div class="container-xs container-sm container-md container-xl">
		{% use 'components/navBar.html.twig' %}
		{% block nav %}
			{{ parent() }}
		{%
    endblock %}

		<div class="row w-100 mt-5 mb-5">
			<div class="col-xs-12 col-sm-12 col-md-10 col-xl-10">
				<h1 class="h1 text-center m-1" id="main-page-h1">{{ header }}</h1>
			</div>
		</div>

		<div class="row w-100 mb-2">
			<div class="col-xs-12 col-sm-12 col-md-10 col-xl-10">
				<div class="input-group">
					<span class="input-group-text w-25">ФИО</span>
					<input type="text" class="form-control" id="name" placeholder="Введите ФИО" value="{{ manager.name }}">
				</div>
			</div>
		</div>

		<div class="row w-100 mb-2">
			<div class="col-xs-12 col-sm-12 col-md-10 col-xl-10">
				<div class="input-group w-100 mb-2">
					<button type="button" class="btn btn-success w-100" id="save-btn" disabled>Сохранить</button>
				</div>
			</div>
		</div>

		<div class="row w-100">
			<div class="col-xs-12 col-sm-12 col-md-10 col-xl-10">
				<p id="error-field"></p>
			</div>
		</div>

		<script type="text/javascript" src="/assets/scripts/managers/update.js"></script>
		<script type="text/javascript" src="/assets/scripts/managers/formFilled.js"></script>
	</div>
{% endblock %}
