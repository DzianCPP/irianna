{% block pagination %}
<div class="row w-auto">
    <div class="col-xs-0 col-sm-0 col-md-1 col-xl-3"></div>
    <div class="col-xs-12 col-sm-12 col-md-10 col-xl-6">
        <nav>
            <ul class="pagination justify-content-center">
                {% if thisPage > 1 %}
                <li class="page-item">
                    {% else %}
                <li class="page-item disabled">
                    {% endif %}
                    <a class="page-link" href="/admins/{% if thisPage > 2 %}{{ thisPage - 1}}{% endif %}"
                        aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only"></span>
                    </a>
                </li>
                {% if thisPage > 1 %}
                <li class="page-item"><a class="page-link"
                        href="/admins/{% if thisPage > 2 %}{{ thisPage - 1}}{% endif %}">{{ thisPage - 1 }}</a>
                </li>
                {% endif %}
                <li class="page-item disabled"><a class="page-link" href="/admins/{{ thisPage }}">{{ thisPage }}</a>
                </li>
                {% if thisPage < pages %} <li class="page-item"><a class="page-link" href="/admins/{{ thisPage + 1 }}">{{
                        thisPage + 1 }}</a>
                    </li>
                    {% endif %}

                    {% if thisPage < pages %} <li class="page-item">
                        {% else %}
                        <li class="page-item disabled">
                            {% endif %}
                            <a class="page-link" href="/admins/{{ thisPage + 1 }}" aria-label="Previous">
                                <span aria-hidden="true">&raquo;</span>
                                <span class="sr-only"></span>
                            </a>
                        </li>
            </ul>
        </nav>
    </div>
    <div class="col-xs-0 col-sm-0 col-md-1 col-xl-3"></div>
</div>
{% endblock %}