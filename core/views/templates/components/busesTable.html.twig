{% block table %}
<table
    class="table table-responsive table-sm table-xl table-md table-xs
    table-hover text-center w-100"
    id="table">
    <tr>
        <th scope="col"><input type="checkbox" id="check-all" /></th>
        <th scope="col">id</th>
        <th scope="col">Название</th>
        <th scope="col">Маршрут</th>
        <th scope="col">Из Минска</th>
        <th scope="col">В Минск</th>
        <th scope="col">Места</th>
        <th scope="col"></th>
    </tr>
    {% for bus in buses %}
    <tr>
        <td><input name="select" type="checkbox" value="{{ bus.id }}" /></td>
        <td>{{ bus.id }}</td>
        <td>{{ bus.name }}</td>
        <td>{{ bus.route }}</td>
        <td>{{ bus.departure_from_minsk }}</td>
        <td>{{ bus.arrival_to_minsk }}</td>
        <td>{{ bus.places }}</td>
        <td>
            <a class="btn btn-success" href="/buses/edit/{{ bus.id }}">Исправить</a>
        </td>
    </tr>
    {% endfor %}
</table>
{% endblock %}
