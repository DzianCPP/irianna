<!DOCTYPE html>
<html>

<head>
  {% block head %}
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="icon" type="image/x-icon" href="/favicon.ico">
  <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
    integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
    crossorigin="anonymous"></script>
  <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>
  <script src="/summernote/summernote-ext-print/summernote-ext-print.js"></script>
  <script src="/summernote/summernote-page-break/summernote-page-break.js"></script>
  <title>
    {% block title %}
    {{ title|upper }}
    {% endblock %}
  </title>
  {% endblock %}
</head>

<style>
  @media all {
    .page-break {
      display: none;
    }
  }

  @media print {
    .page-break {
      display: block;
      page-break-before: always;
    }
  }
</style>

<body>
  <div class="container">
    <div id="summernote" class="text-left">
    </div>
    <button class="btn btn-success w-75 mx-auto" id="save-btn">Сохранить</button>
    <p id="error-field" style="color: red;"></p>
  </div>
  <div id="footer">
    {% block footer %}
    <div class="row mt-5 pt-5 w-100">
      <footer class="bg-light text-center text-lg-start fixed-bottom mt-5">
        <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
          © 2023 Copyright:
          <a class="text-dark" href="#">ИриАННА</a>
        </div>
      </footer>
    </div>
    {% endblock %}
  </div>

  <p hidden id="document-name">{{ contract.name }}</p>
  <p hidden id="document-label">{{ contract.label }}</p>
  <p hidden id="document-id">{{ contract.id }}</p>


  <script src="/assets/scripts/login/logout.js" type="text/javascript"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    $('#summernote').summernote({
      toolbar: [
        // [groupName, [list of button]]
        ['style', ['bold', 'italic', 'underline', 'clear']],
        ['insert', ['table', 'picture', 'link']],
        ['fontsize', ['fontsize']],
        ['font', ['strikethrough']],
        ['pagebreak', ['pagebreak']],
        ['para', ['paragraph', 'ul', 'ol']],
        ['misc', ['undo', 'redo', 'print']]
      ]
    });
  </script>
  <script src="/assets/scripts/contracts/update.js"></script>
</body>

</html>