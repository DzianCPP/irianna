{% extends "base.html.twig" %}

{% block content %}
<div class="container-xs container-sm container-md container-xl">

    <div class="row w-100 mt-5 mb-5">
        <div class="col-xs-12 col-sm-12 col-md-10 col-xl-10">
            <h1 class="h1 m-1" id="main-page-h1">{{ message }}</h1>
        </div>
    </div>

    <div class="row w-100 mb-2">
        <div class="col-xs-12 col-sm-12 col-md-10 col-xl-10">
            <div class="input-group">
                <span class="input-group-text w-25">Email</span>
                <input type="email" class="form-control" id="email">
            </div>
        </div>
    </div>

    <div class="row w-100 mb-2">
        <div class="col-xs-12 col-sm-12 col-md-10 col-xl-10">
            <div class="input-group">
                <span class="input-group-text w-25 text-wrap">Repeat email</span>
                <input type="email" class="form-control" id="email-confirm">
            </div>
        </div>
    </div>

    <div class="row w-100 mb-2">
        <div class="col-xs-12 col-sm-12 col-md-10 col-xl-10">
            <div class="input-group">
                <span class="input-group-text w-25">Login</span>
                <input type="text" class="form-control" id="login">
            </div>
        </div>
    </div>

    <div class="row w-100 mb-2">
        <div class="col-xs-12 col-sm-12 col-md-10 col-xl-10">
            <div class="input-group">
                <span class="input-group-text w-25">Password</span>
                <input type="password" class="form-control" id="password">
            </div>
        </div>
    </div>

    <div class="row w-100 mb-2">
        <div class="col-xs-12 col-sm-12 col-md-10 col-xl-10">
            <div class="input-group">
                <span class="input-group-text w-25 text-wrap">Repeat password</span>
                <input type="password" class="form-control" id="password-confirm">
            </div>
        </div>
    </div>

    <div class="row w-100 mb-2">
        <div class="col-xs-12 col-sm-12 col-md-10 col-xl-10">
            <div class="input-group w-100 mb-2">
                <button type="button" class="btn btn-success w-100" id="register-btn">Register</button>
            </div>
        </div>
    </div>

    <script type="text/javascript" src="/assets/scripts/login/login.js"></script>
</div>
{% endblock %}