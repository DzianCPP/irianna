{% extends "base.html.twig" %}

{% block content %}
<div class="container-xs container-sm container-md container-xl">

    <div class="row w-100 mt-5 mb-5">
        <div class="col-xs-12 col-sm-12 col-md-10 col-xl-10">
            <h1 class="h1 m-1" id="main-page-h1">{{ message }}</h1>
        </div>
    </div>

    <div class="row w-100 mb-2">
        <div class="col-xs-12 col-sm-12 col-md-10 col-xl-10">
            <div class="input-group">
                <span class="input-group-text w-25">Почта</span>
                <input type="email" class="form-control" id="email" placeholder="Введите почту">
            </div>
        </div>
    </div>

    <div class="row w-100 mb-2">
        <div class="col-xs-12 col-sm-12 col-md-10 col-xl-10">
            <div class="input-group">
                <span class="input-group-text w-25 text-wrap"></span>
                <input type="email" class="form-control" id="email-confirm" placeholder="Повторите почту">
            </div>
        </div>
    </div>

    <div class="row w-100 mb-2">
        <div class="col-xs-12 col-sm-12 col-md-10 col-xl-10">
            <div class="input-group">
                <span class="input-group-text w-25">Пароль</span>
                <input type="password" class="form-control" id="password" placeholder="Введите пароль">
            </div>
        </div>
    </div>

    <div class="row w-100 mb-2">
        <div class="col-xs-12 col-sm-12 col-md-10 col-xl-10">
            <div class="input-group">
                <span class="input-group-text w-25 text-wrap"></span>
                <input type="password" class="form-control" id="password-confirm" placeholder="Повторите пароль">
            </div>
        </div>
    </div>

    <div class="row w-100 mb-2">
        <div class="col-xs-12 col-sm-12 col-md-10 col-xl-10">
            <div class="input-group">
                <span class="input-group-text w-25">Логин</span>
                <input type="text" class="form-control" id="login" placeholder="Введите логин">
            </div>
        </div>
    </div>

    <div class="row w-100 mb-2">
        <div class="col-xs-12 col-sm-12 col-md-10 col-xl-10">
            <div class="input-group w-100 mb-2">
                <button type="button" class="btn btn-success w-100" id="register-btn">Зарегистрироваться</button>
            </div>
        </div>
    </div>

    <script type="text/javascript" src="/assets/scripts/register/register.js"></script>
</div>
{% endblock %}