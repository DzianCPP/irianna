{% extends "base.html.twig" %}
{% block content %}
	<div class="container-xs container-sm container-md container-xl w-100">
		{% use 'components/navBar.html.twig' %}
		{% block nav %}
			{{ parent() }}
		{%
    endblock %}
		<div class="col-xs-12 col-sm-12 col-md-12 col-xl-12">
			<p class="h1 m-auto text-center mt-5 mb-3">{{ header | upper }}</p>
		</div>

		<div class="row">
			<div class="col-xs-5 col-sm-5 col-md-5 col-xl-5 mx-auto">
				<select class="form-select">
					{% for hotel in hotels %}
						<option value="{{ hotel.id }}">{{ hotel.name }}</option>
					{% endfor %}
				</select>
			</div>
		</div>

		{% if rooms|length > 0 %}
			<div class="row w-100">
				<div class="col-xs-12 col-sm-12 col-md-12 col-xl-12 mx-auto">
					<div class="table-responsive">
						{% use 'components/roomsTable.html.twig' %}
						{% block table %}
							{{ parent() }}
						{% endblock %}
					</div>
				</div>
			</div>

			<div class="row w-100">
				<div class="col-xs-0 col-sm-0 col-md-1 col-xl-3"></div>
				<div class="col-xs-12 col-sm-12 col-md-10 col-xl-6">
					<div>
						<a class="btn btn-outline-success w-100 mb-1" id="delete-all">
							Удалить выбранные
						</a>
					</div>
				</div>
				<div class="col-xs-0 col-sm-0 col-md-1 col-xl-3"></div>
			</div>

		{% else %}
			<div class="row w-100">
				<div class="col-xs-0 col-sm-0 col-md-1 col-xl-3"></div>
				<div class="col-xs-12 col-sm-12 col-md-10 col-xl-6">
					<div>
						<h1 class="h1 w-100 m-1">{{ "Не удалось найти комнаты" }}</h1>
					</div>
				</div>
				<div class="col-xs-0 col-sm-0 col-md-1 col-xl-3"></div>
			</div>
		{% endif %}

		<div class="row w-100">
			<div class="col-xs-0 col-sm-0 col-md-1 col-xl-3"></div>
			<div class="col-xs-12 col-sm-12 col-md-10 col-xl-6">
				<div>
					<a class="btn btn-outline-success w-100 mb-1" id="add-country" href="/rooms/pickHotel">
						Добавить номера
					</a>
				</div>
			</div>
			<div class="col-xs-0 col-sm-0 col-md-1 col-xl-3"></div>
		</div>

		<div class="row w-100">
			<div class="col-xs-0 col-sm-0 col-md-1 col-xl-3"></div>
			<div class="col-xs-12 col-sm-12 col-md-10 col-xl-6">
				<div>
					<a class="btn btn-success w-100 mb-1" id="main-page" href="/admin">
						Главная страница
					</a>
				</div>
			</div>
			<div class="col-xs-0 col-sm-0 col-md-1 col-xl-3"></div>
		</div>
	</div>

</div>{% endblock %}
