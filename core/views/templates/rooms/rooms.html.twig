{% extends "base.html.twig" %}
{% block content %}
	<div class="container-xs container-sm container-md container-xl w-100">
		{% use 'components/navBar.html.twig' %}
		{% block nav %}
			{{ parent() }}
		{%
    endblock %}
		<div class="col-xs-12 col-sm-12 col-md-12 col-xl-12">
			<p class="h1 m-auto text-center mt-5 mb-3">{{ header | upper }}</p>
			<p class="h5 m-auto text-center mb-3">{{ hotel.name }}</p>
		</div>

		<div class="row">
			<div class="col-xs-5 col-sm-5 col-md-5 col-xl-5 mx-auto">
				<div class="dropdown">
					<a class="btn btn-outline-secondary dropdown-toggle text-dark" href="/rooms/{{ hotel.id }}" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
						{{ hotel.name }}
					</a>

					<ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
						{% for hotel in hotels %}
						<li><a class="dropdown-item" href="/rooms/{{ hotel.id }}">{{ hotel.name }}</a></li>
						{% endfor %}
					</ul>
				</div>
			</div>
		</div>

		{% if rooms|length > 0 %}
			<div class="row w-100">
				<div class="col-xs-12 col-sm-12 col-md-12 col-xl-12 mx-auto">
					<div class="table-responsive">
						{% use 'components/roomsTable.html.twig' %}
						{% block table %}
							{{ parent() }}
						{% endblock %}
					</div>
				</div>
			</div>

			<div class="row w-100">
				<div class="col-xs-0 col-sm-0 col-md-1 col-xl-3"></div>
				<div class="col-xs-12 col-sm-12 col-md-10 col-xl-6">
					<div>
						<a class="btn btn-outline-success w-100 mb-1" id="delete-btn">
							Удалить выбранные
						</a>
					</div>
				</div>
				<div class="col-xs-0 col-sm-0 col-md-1 col-xl-3"></div>
			</div>

		{% else %}
			<div class="row w-100">
				<div class="col-xs-0 col-sm-0 col-md-1 col-xl-3"></div>
				<div class="col-xs-12 col-sm-12 col-md-10 col-xl-6">
					<div>
						<h1 class="h1 w-100 m-1">{{ "Не удалось найти номера в этой	 гостинице" }}</h1>
					</div>
				</div>
				<div class="col-xs-0 col-sm-0 col-md-1 col-xl-3"></div>
			</div>
		{% endif %}

		<div class="row w-100">
			<div class="col-xs-0 col-sm-0 col-md-1 col-xl-3"></div>
			<div class="col-xs-12 col-sm-12 col-md-10 col-xl-6">
				<div>
					<a class="btn btn-outline-success w-100 mb-1" id="add-country" href="/rooms/pickHotel">
						Добавить номера
					</a>
				</div>
			</div>
			<div class="col-xs-0 col-sm-0 col-md-1 col-xl-3"></div>
		</div>

		<div class="row w-100">
			<div class="col-xs-0 col-sm-0 col-md-1 col-xl-3"></div>
			<div class="col-xs-12 col-sm-12 col-md-10 col-xl-6">
				<div>
					<a class="btn btn-success w-100 mb-1" id="main-page" href="/admin">
						Главная страница
					</a>
				</div>
			</div>
			<div class="col-xs-0 col-sm-0 col-md-1 col-xl-3"></div>
		</div>
	</div>
</div>

<script type="text/javascript" src="/assets/scripts/selectAll.js"></script>
<script type="text/javascript" src="/assets/scripts/rooms/delete.js"></script>

{% endblock %}
