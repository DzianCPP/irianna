{% extends "base.html.twig" %}
{% block content %}
	<div class="container-xs container-sm container-md container-xl">


		<div class="container-fluid">
			<div class="row w-100 mt-5 mb-5">
				<div class="col-md-1 col-xl-3"></div>
				<div class="col-xs-12 col-sm-12 col-md-10 col-xl-6">
					<p class="h1 text-center" id="main-page-h1">{{ header }}</p>
				</div>
			</div>
		</div>

		<div class="container-fluid">
			<div class="row w-100">
				<div class="col-md-1 col-xl-3"></div>
				<div class="col-xs-12 col-sm-12 col-md-10 col-xl-6">
						<div class="row w-100 mb-2">
							<div class="input-group">
								<span class="input-group-text w-25">Название
									<span class="text-danger">*</span>
								</span>
								<input type="text" class="form-control" name="text" id="name" placeholder="Введите название автобуса"/>
							</div>
						</div>

						<div class="row w-100 mb-2">
							<div class="input-group">
								<span class="input-group-text w-25">Маршрут
									<span class="text-danger">*</span>
								</span>
								<input type="text" class="form-control" name="text" id="route" placeholder="Введите маршрут автобуса"/>
							</div>
						</div>

						<div class="row w-100 mb-2">
							<div class="input-group">
								<span class="input-group-text w-25">Места
									<span class="text-danger">*</span>
								</span>
								<input type="number" class="form-control" name="text" id="places" placeholder="Введите количетсво мест"/>
							</div>
						</div>

						<div class="row w-100 mb-2">
							<div class="input-group">
                                <div class="input-group w-100">
									<span class="input-group-text w-25">Из Минска</span>
									<textarea placeholder="Из Минска" class="form-control w-50" name="from-minsk" aria-label="With textarea" id="from-minsk"></textarea>
									<input type="date" class="btn btn-sm border-0 w-25" name="date" id="calendar-from-minsk">
								</div>
								<div class="input-group w-100">
									<span class="input-group-text w-25">В Минск</span>
									<textarea placeholder="В Минск" class="form-control w-50" name="to-minsk" aria-label="With textarea" id="to-minsk"></textarea>
                                    <input type="date" class="btn btn-sm border-0 w-25" name="date" id="calendar-to-minsk">
								</div>
							</div>
						</div>

						<div class="row w-100 mb-2">
							<div class="input-group w-100 mb-2">
								<button type="button" class="btn btn-success w-100" id="save-btn" disabled>
									Сохранить
								</button>
							</div>
						</div>

						<div class="row w-100 mb-2">
							<p id="error-field-1"></p>
						</div>
					
				</div>
			</div>
		</div>


		<script type="text/javascript" src="/assets/scripts/buses/create.js"></script>
		<script type="text/javascript" src="/assets/scripts/buses/formFilled.js"></script>
		<script type="text/javascript" src="/assets/scripts/buses/addDates.js"></script>		
	</div>
{% endblock %}
