{% extends "base.html.twig" %}

{% block content %}

<div class="container-xs container-sm container-md container-xl">

    <div class="row w-100 mt-5 mb-5">
        <div class="col-xs-12 col-sm-12 col-md-10 col-xl-10">
            <h1 class="h1 m-1" id="main-page-h1">{{ message }}</h1>
        </div>
    </div>

    <div class="row w-100 mb-2">
        <div class="col-xs-12 col-sm-12 col-md-10 col-xl-10">
            <div class="input-group">
                <span class="input-group-text w-25">Название</span>
                <input type="text" class="form-control" id="name" placeholder="Введите название страны">
            </div>
        </div>
    </div>

    <div class="row w-100 mb-2">
        <div class="col-xs-12 col-sm-12 col-md-10 col-xl-10">
            <div class="input-group">
                <span class="input-group-text w-25">Статус</span>
                <select name="is-active" id="is-active" class="btn btn-success dropdown-toggle w-75">
                    <option value="0">Не активна</option>
                    <option value="1">Активна</option>
                </select>
            </div>
        </div>
    </div>

    <div class="row w-100 mb-2">
        <div class="col-xs-12 col-sm-12 col-md-10 col-xl-10">
            <div class="input-group w-100 mb-2">
                <button type="button" class="btn btn-success w-100" id="save-btn"
                    disabled>Сохранить</button>
            </div>
        </div>
    </div>

    <div class="row w-100">
        <div class="col-xs-12 col-sm-12 col-md-10 col-xl-10">
            <p id="error-field"></p>
        </div>
    </div>

    <script type="text/javascript" src="/assets/scripts/countries/create.js"></script>
    <script type="text/javascript" src="/assets/scripts/countries/formFilled.js"></script>
</div>
{% endblock %}