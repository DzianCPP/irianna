<!DOCTYPE html>
<html>

<head>
  {% block head %}
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="icon" type="image/x-icon" href="/favicon.ico">
  <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
    integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
    crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
  <link href="/summernote/summernote-bs4.css" rel="stylesheet">
  <script src="/summernote/summernote-bs4.js"></script>
  <script src="/summernote/summernote-ext-print/summernote-ext-print.js"></script>
  <script src="/summernote/summernote-page-break/summernote-page-break.js"></script>
  <title>
    {% block title %}
    {{ title|upper }}
    {% endblock %}
  </title>
  {% endblock %}
</head>

<body>
  <style>
    @media all {
      .page-break {
        display: none;
      }
    }

    @media print {
      .page-break {
        display: block;
        page-break-before: always;
      }
    }
  </style>
  {% use 'components/navBar.html.twig' %}
  {% block nav %}
  {{ parent() }}
  {% endblock %}
  <div class="container">
    <div id="summernote" class="text-left">
      {% use 'components/contract.html.twig' %}
      {% block contract %}
      {{ parent() }}
      {% endblock %}
    </div>
    <button class="btn btn-success w-100 mx-auto mt-3" id="save-btn">Сохранить</button>
    <p id="error-field" style="color: red;"></p>
  </div>
  <div id="footer">
    {% block footer %}
    <div class="row mt-5 pt-5 w-100">
      <footer class="bg-light text-center text-lg-start fixed-bottom mt-5">
        <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
          © 2023 Copyright:
          <a class="text-dark" href="#">ИриАННА</a>
        </div>
      </footer>
    </div>
    {% endblock %}
  </div>

  <p hidden id="document-name">{{ document_name }}</p>
  <p hidden id="document-label">{{ document_label }}</p>
  <p hidden id="document-id">{{ document_id }}</p>


  <script src="/assets/scripts/login/logout.js" type="text/javascript"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    $('#summernote').summernote({
      toolbar: [
        // [groupName, [list of button]]
        ['style', ['bold', 'italic', 'underline', 'clear']],
        ['insert', ['table', 'picture', 'link']],
        ['fontsize', ['fontsize']],
        ['font', ['strikethrough']],
        ['pagebreak', ['pagebreak']],
        ['para', ['paragraph', 'ul', 'ol']],
        ['misc', ['undo', 'redo', 'print']]
      ]
    });
  </script>
  <script src="/assets/scripts/contracts/update.js"></script>
</body>

</html>